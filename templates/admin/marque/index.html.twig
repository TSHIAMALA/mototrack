{% extends 'base.html.twig' %}
{% block title %}Marques - MotoTrack{% endblock %}
{% block page_title %}Gestion des Marques{% endblock %}

{% block body %}
<div class="bg-white rounded-2xl shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">Liste des Marques</h3>
        <a href="{{ path('admin_marque_new') }}" class="inline-flex items-center px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700">
            <i class="fas fa-plus mr-2"></i>Nouvelle Marque
        </a>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nom</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for marque in marques %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 font-medium text-gray-900">{{ marque.nom }}</td>
                    <td class="px-6 py-4 text-right">
                        <a href="{{ path('admin_marque_edit', {id: marque.id}) }}" class="text-gray-400 hover:text-amber-600"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr><td colspan="2" class="px-6 py-12 text-center text-gray-500"><i class="fas fa-tags text-4xl mb-3"></i><p>Aucune marque</p></td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
