{% extends 'base.html.twig' %}
{% block title %}Modifier Utilisateur - MotoTrack{% endblock %}
{% block page_title %}Modifier l'Utilisateur{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Modifier l'Utilisateur</h2>
        <p class="text-gray-500 mt-1">{{ user.nom }}</p>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
    
    <!-- Section: Informations personnelles -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-blue-100 flex items-center justify-center">
                    <i class="fas fa-user text-blue-600"></i>
                </div>
                <h3 class="font-semibold text-gray-900">Informations personnelles</h3>
            </div>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Nom complet <span class="text-red-500">*</span></label>
                    {{ form_widget(form.nom, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Nom complet de l'utilisateur</p>
                    {{ form_errors(form.nom) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email <span class="text-red-500">*</span></label>
                    {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Adresse email</p>
                    {{ form_errors(form.email) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Section: Mot de passe (optionnel) -->
    {% if form.plainPassword is defined %}
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-red-100 flex items-center justify-center">
                    <i class="fas fa-lock text-red-600"></i>
                </div>
                <h3 class="font-semibold text-gray-900">Changer le mot de passe</h3>
            </div>
        </div>
        <div class="p-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Nouveau mot de passe</label>
                {{ form_widget(form.plainPassword, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors', 'placeholder': 'Laisser vide pour ne pas changer'}}) }}
                <p class="mt-1 text-xs text-gray-500">Laissez vide pour conserver le mot de passe actuel</p>
                {{ form_errors(form.plainPassword) }}
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Section: R么le et Site -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-purple-100 flex items-center justify-center">
                    <i class="fas fa-user-tag text-purple-600"></i>
                </div>
                <h3 class="font-semibold text-gray-900">R么le et Affectation</h3>
            </div>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">R么le <span class="text-red-500">*</span></label>
                    {{ form_widget(form.roles, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">R么le de l'utilisateur</p>
                    {{ form_errors(form.roles) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Site <span class="text-red-500">*</span></label>
                    {{ form_widget(form.site, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Site d'affectation</p>
                    {{ form_errors(form.site) }}
                </div>
            </div>
            
            <div class="mt-6">
                <div class="flex items-center gap-2">
                    {{ form_widget(form.isActive, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
                    <label class="text-sm font-medium text-gray-700">Compte actif</label>
                </div>
                <p class="mt-1 text-xs text-gray-500 ml-6">L'utilisateur pourra se connecter si le compte est actif</p>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-between pt-4">
        <a href="{{ path('admin_user_index') }}" class="text-gray-600 hover:text-gray-900 font-medium">
            Annuler
        </a>
        <button type="submit" class="inline-flex items-center px-6 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-colors">
            Enregistrer les modifications
        </button>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}
