{% extends 'base.html.twig' %}
{% block title %}Modifier Site - MotoTrack{% endblock %}
{% block page_title %}Modifier le Site{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Modifier le Site</h2>
        <p class="text-gray-500 mt-1">{{ site.nom }}</p>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
    
    <!-- Section: Informations du site -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-blue-100 flex items-center justify-center">
                    <i class="fas fa-map-marker-alt text-blue-600"></i>
                </div>
                <h3 class="font-semibold text-gray-900">Informations du site</h3>
            </div>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Nom du site <span class="text-red-500">*</span></label>
                    {{ form_widget(form.nom, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Nom du site d'enregistrement</p>
                    {{ form_errors(form.nom) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Localisation</label>
                    {{ form_widget(form.localisation, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Adresse ou localisation du site</p>
                    {{ form_errors(form.localisation) }}
                </div>
            </div>
            
            <div class="mt-6">
                <div class="flex items-center gap-2">
                    {{ form_widget(form.isActive, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
                    <label class="text-sm font-medium text-gray-700">Site actif</label>
                </div>
                <p class="mt-1 text-xs text-gray-500 ml-6">Le site sera disponible pour les enregistrements</p>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-between pt-4">
        <a href="{{ path('admin_site_index') }}" class="text-gray-600 hover:text-gray-900 font-medium">
            Annuler
        </a>
        <button type="submit" class="inline-flex items-center px-6 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-colors">
            Enregistrer les modifications
        </button>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}
