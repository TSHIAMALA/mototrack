{% extends 'base.html.twig' %}
{% block title %}Nouvelle Moto - MotoTrack{% endblock %}
{% block page_title %}Nouvelle Moto{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Enregistrer une Nouvelle Moto</h2>
        <p class="text-gray-500 mt-1">Ajoutez une moto au système</p>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
    
    <!-- Section: Propriétaire -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-blue-100 flex items-center justify-center">
                    <i class="fas fa-user text-blue-600"></i>
                </div>
                <h3 class="font-semibold text-gray-900">Propriétaire</h3>
            </div>
        </div>
        <div class="p-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Motard <span class="text-red-500">*</span></label>
                {{ form_widget(form.motard, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                <p class="mt-1 text-xs text-gray-500">
                    Sélectionnez le propriétaire ou <a href="{{ path('encoder_motard_new') }}" class="text-blue-600 hover:underline">créez un nouveau motard</a>
                </p>
                {{ form_errors(form.motard) }}
            </div>
        </div>
    </div>

    <!-- Section: Informations de la moto -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-green-100 flex items-center justify-center">
                    <i class="fas fa-motorcycle text-green-600"></i>
                </div>
                <h3 class="font-semibold text-gray-900">Informations de la moto</h3>
            </div>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Marque <span class="text-red-500">*</span></label>
                    {{ form_widget(form.marque, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Sélectionnez la marque</p>
                    {{ form_errors(form.marque) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Modèle</label>
                    {{ form_widget(form.modele, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors', 'placeholder': 'ex: CG 125'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Modèle de la moto</p>
                    {{ form_errors(form.modele) }}
                </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Numéro de châssis <span class="text-red-500">*</span></label>
                    {{ form_widget(form.numeroChassis, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors font-mono', 'placeholder': 'ex: LXYJCML0XC1234567'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Numéro unique du châssis</p>
                    {{ form_errors(form.numeroChassis) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Couleur</label>
                    {{ form_widget(form.couleur, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors', 'placeholder': 'ex: Rouge'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Couleur de la moto</p>
                    {{ form_errors(form.couleur) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-between pt-4">
        <a href="{{ path('encoder_moto_index') }}" class="text-gray-600 hover:text-gray-900 font-medium">
            Annuler
        </a>
        <button type="submit" class="inline-flex items-center px-6 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-colors">
            Enregistrer la moto
        </button>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}
