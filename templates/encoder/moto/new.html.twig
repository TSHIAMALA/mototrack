{% extends 'base.html.twig' %}
{% block title %}Nouvelle Moto - MotoTrack{% endblock %}
{% block page_title %}Nouvelle Moto{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- Sidebar Navigation (Stepper) -->
        <div class="lg:col-span-3 space-y-6">
            <div class="sticky top-8">
                <div class="mb-6">
                    <h2 class="text-xl font-bold text-gray-900">Nouvelle Moto</h2>
                    <p class="text-sm text-gray-500">Enregistrement véhicule</p>
                </div>
                
                <nav class="space-y-2" aria-label="Progression">
                    <a href="#proprietaire" class="flex items-center w-full px-4 py-3 text-sm font-medium text-white bg-slate-800 rounded-lg shadow-sm transition-all">
                        <span class="flex items-center justify-center w-6 h-6 mr-3 text-xs font-bold text-slate-800 bg-white rounded-full">1</span>
                        Propriétaire
                    </a>
                    <a href="#caracteristiques" class="flex items-center w-full px-4 py-3 text-sm font-medium text-gray-600 hover:bg-gray-50 hover:text-gray-900 rounded-lg transition-all">
                        <span class="flex items-center justify-center w-6 h-6 mr-3 text-xs font-bold text-gray-400 border border-gray-300 rounded-full">2</span>
                        Caractéristiques
                    </a>
                </nav>

                <div class="mt-8 p-4 bg-yellow-50 rounded-xl border border-yellow-100">
                    <div class="flex items-start">
                        <i class="fas fa-exclamation-triangle text-yellow-600 mt-0.5 mr-3"></i>
                        <p class="text-xs text-yellow-700 leading-relaxed">
                            Vérifiez le numéro de châssis deux fois. C'est l'identifiant unique du véhicule.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Form Content -->
        <div class="lg:col-span-9">
            <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8">
                <div class="mb-8">
                    <h1 class="text-2xl font-bold text-gray-900">Enregistrer une moto</h1>
                    <p class="text-gray-500 mt-1">Associez une moto à un motard existant.</p>
                </div>

                {{ form_start(form, {'attr': {'class': 'space-y-10', 'novalidate': 'novalidate'}}) }}
                
                <!-- Section 1: Propriétaire -->
                <section id="proprietaire" class="scroll-mt-20">
                    <h3 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
                        <span class="w-8 h-8 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center mr-3 text-sm">01</span>
                        Propriétaire
                    </h3>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Motard <span class="text-red-500">*</span></label>
                        {{ form_widget(form.motard, {'attr': {'class': 'w-full px-4 py-3 bg-gray-50 border-gray-200 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-colors'}}) }}
                        <div class="mt-2 flex justify-between items-center">
                            <p class="text-xs text-gray-500">Sélectionnez le propriétaire légal.</p>
                            <a href="{{ path('encoder_motard_new') }}" class="text-xs font-medium text-blue-600 hover:underline">+ Créer un nouveau motard</a>
                        </div>
                        {{ form_errors(form.motard) }}
                    </div>
                </section>

                <hr class="border-gray-100">

                <!-- Section 2: Caractéristiques -->
                <section id="caracteristiques" class="scroll-mt-20">
                    <h3 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
                        <span class="w-8 h-8 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center mr-3 text-sm">02</span>
                        Caractéristiques Techniques
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Numéro de châssis <span class="text-red-500">*</span></label>
                            {{ form_widget(form.numeroChassis, {'attr': {'class': 'w-full px-4 py-3 bg-gray-50 border-gray-200 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-colors font-mono uppercase', 'placeholder': 'ex: LXYJCML0XC...'}}) }}
                            {{ form_errors(form.numeroChassis) }}
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Marque <span class="text-red-500">*</span></label>
                            {{ form_widget(form.marque, {'attr': {'class': 'w-full px-4 py-3 bg-gray-50 border-gray-200 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-colors'}}) }}
                            {{ form_errors(form.marque) }}
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Modèle</label>
                            {{ form_widget(form.modele, {'attr': {'class': 'w-full px-4 py-3 bg-gray-50 border-gray-200 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-colors', 'placeholder': 'ex: Boxer 150'}}) }}
                            {{ form_errors(form.modele) }}
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Couleur</label>
                            {{ form_widget(form.couleur, {'attr': {'class': 'w-full px-4 py-3 bg-gray-50 border-gray-200 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-colors', 'placeholder': 'ex: Rouge'}}) }}
                            {{ form_errors(form.couleur) }}
                        </div>
                    </div>
                </section>

                <!-- Actions -->
                <div class="flex items-center justify-end gap-4 pt-6 border-t border-gray-100">
                    <a href="{{ path('encoder_moto_index') }}" class="px-6 py-3 text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">
                        Annuler
                    </a>
                    <button type="submit" class="px-8 py-3 text-sm font-bold text-white bg-yellow-500 rounded-xl hover:bg-yellow-600 focus:ring-4 focus:ring-yellow-200 transition-all shadow-sm hover:shadow-md">
                        Enregistrer la moto
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
