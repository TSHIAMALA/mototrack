{% extends 'base.html.twig' %}
{% block title %}Détails Moto - MotoTrack{% endblock %}
{% block page_title %}Détails de la Moto{% endblock %}

{% block body %}
<div class="space-y-6">
    <!-- En-tête -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
            <div>
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-motorcycle text-primary-500 mr-2"></i>{{ moto.marque.nom|default('Moto') }} {{ moto.modele|default('') }}
                </h3>
                <p class="text-sm text-gray-500 font-mono">{{ moto.numeroChassis }}</p>
            </div>
            <div class="flex items-center gap-2">
                {% if moto.plaque %}
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    <i class="fas fa-id-card mr-1"></i>{{ moto.plaque.numero }}
                </span>
                {% else %}
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                    Sans plaque
                </span>
                {% endif %}
                <a href="{{ path('encoder_moto_edit', {id: moto.id}) }}" class="px-3 py-1 text-sm text-amber-600 hover:text-amber-700 border border-amber-300 rounded-lg hover:bg-amber-50">
                    <i class="fas fa-edit mr-1"></i>Modifier
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Informations de la moto -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h4 class="font-semibold text-gray-900"><i class="fas fa-info-circle text-blue-500 mr-2"></i>Informations</h4>
            </div>
            <div class="p-6">
                <dl class="space-y-4">
                    <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                        <dt class="text-gray-500">N° Châssis</dt>
                        <dd class="font-mono font-medium text-gray-900">{{ moto.numeroChassis }}</dd>
                    </div>
                    <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                        <dt class="text-gray-500">Marque</dt>
                        <dd class="font-medium text-gray-900">{{ moto.marque.nom|default('-') }}</dd>
                    </div>
                    <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                        <dt class="text-gray-500">Modèle</dt>
                        <dd class="font-medium text-gray-900">{{ moto.modele|default('-') }}</dd>
                    </div>
                    <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                        <dt class="text-gray-500">Couleur</dt>
                        <dd class="font-medium text-gray-900">{{ moto.couleur|default('-') }}</dd>
                    </div>
                    <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                        <dt class="text-gray-500">Site</dt>
                        <dd class="font-medium text-gray-900">{{ moto.site.nom|default('-') }}</dd>
                    </div>
                    <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                        <dt class="text-gray-500">Enregistré le</dt>
                        <dd class="font-medium text-gray-900">{{ moto.createdAt|date('d/m/Y') }}</dd>
                    </div>
                </dl>
            </div>
        </div>

        <!-- Propriétaire -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h4 class="font-semibold text-gray-900"><i class="fas fa-user text-green-500 mr-2"></i>Propriétaire</h4>
            </div>
            <div class="p-6">
                {% if moto.motard %}
                <div class="flex items-center gap-4 mb-4">
                    <div class="h-14 w-14 rounded-full bg-primary-100 flex items-center justify-center">
                        <span class="text-xl font-bold text-primary-600">{{ moto.motard.nomComplet|first|upper }}</span>
                    </div>
                    <div>
                        <h5 class="font-semibold text-gray-900">{{ moto.motard.nomComplet }}</h5>
                        <span class="text-sm text-gray-500">{{ moto.motard.type == 'PHYSIQUE' ? 'Personne physique' : 'Personne morale' }}</span>
                    </div>
                </div>
                <dl class="space-y-3">
                    <div class="flex items-center gap-2 text-sm">
                        <i class="fas fa-phone text-gray-400 w-5"></i>
                        <span class="text-gray-600">{{ moto.motard.telephone|default('Non renseigné') }}</span>
                    </div>
                    <div class="flex items-center gap-2 text-sm">
                        <i class="fas fa-envelope text-gray-400 w-5"></i>
                        <span class="text-gray-600">{{ moto.motard.email|default('Non renseigné') }}</span>
                    </div>
                    <div class="flex items-center gap-2 text-sm">
                        <i class="fas fa-map-marker-alt text-gray-400 w-5"></i>
                        <span class="text-gray-600">{{ moto.motard.activeAdresse|default('Non renseignée') }}</span>
                    </div>
                </dl>
                <div class="mt-4 pt-4 border-t border-gray-200">
                    <a href="{{ path('encoder_motard_show', {id: moto.motard.id}) }}" class="text-primary-600 hover:text-primary-700 text-sm">
                        Voir le profil complet <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
                {% else %}
                <p class="text-gray-500 text-center py-4">Aucun propriétaire assigné</p>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Historique des paiements -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="font-semibold text-gray-900"><i class="fas fa-money-bill-wave text-purple-500 mr-2"></i>Paiements</h4>
        </div>
        <div class="p-6">
            {% if moto.paiements|length > 0 %}
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead>
                        <tr class="border-b border-gray-200">
                            <th class="text-left py-3 text-sm font-medium text-gray-500">Date</th>
                            <th class="text-left py-3 text-sm font-medium text-gray-500">Taxe</th>
                            <th class="text-right py-3 text-sm font-medium text-gray-500">Montant</th>
                            <th class="text-center py-3 text-sm font-medium text-gray-500">Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for paiement in moto.paiements %}
                        <tr class="border-b border-gray-100">
                            <td class="py-3 text-gray-600">{{ paiement.createdAt|date('d/m/Y') }}</td>
                            <td class="py-3 text-gray-900 font-medium">{{ paiement.taxe.libelle }}</td>
                            <td class="py-3 text-right font-semibold text-gray-900">{{ paiement.montant|number_format(0, ',', ' ') }} FC</td>
                            <td class="py-3 text-center">
                                {% if paiement.status == 'VALIDE' %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Validé</span>
                                {% else %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">En attente</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <p class="text-gray-500 text-center py-4">Aucun paiement enregistré</p>
            {% endif %}
        </div>
    </div>

    <div class="flex justify-start">
        <a href="{{ path('encoder_moto_index') }}" class="inline-flex items-center px-4 py-2 text-gray-600 hover:text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
            <i class="fas fa-arrow-left mr-2"></i>Retour à la liste
        </a>
    </div>
</div>
{% endblock %}
