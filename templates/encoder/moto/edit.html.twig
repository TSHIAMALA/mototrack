{% extends 'base.html.twig' %}
{% block title %}Modifier Moto - MotoTrack{% endblock %}
{% block page_title %}Modifier Moto{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">
                <i class="fas fa-motorcycle text-gray-400 mr-2"></i>Modifier Moto
            </h3>
        </div>
        <div class="p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            {% for field in form %}
                {% if field.vars.name != '_token' %}
                <div>
                    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-4 py-3 border'}}) }}
                    {{ form_errors(field, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>
                {% endif %}
            {% endfor %}
            
            <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200">
                <a href="{{ path('encoder_moto_index') }}" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                    Annuler
                </a>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-colors">
                    <i class="fas fa-check mr-2"></i>Enregistrer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
