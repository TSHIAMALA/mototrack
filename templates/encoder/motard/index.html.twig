{% extends 'base.html.twig' %}
{% block title %}Motards - MotoTrack{% endblock %}
{% block page_title %}Gestion des Motards{% endblock %}

{% block body %}
<div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 bg-gray-50/50">
        <div>
            <h3 class="text-lg font-bold text-gray-900">
                Liste des Motards
            </h3>
            <p class="text-sm text-gray-500 mt-1">Gérez les propriétaires de motos ({{ motards|length }})</p>
        </div>
        <a href="{{ path('encoder_motard_new') }}" class="inline-flex items-center justify-center px-5 py-2.5 bg-blue-600 text-white text-sm font-semibold rounded-xl hover:bg-blue-700 focus:ring-4 focus:ring-blue-100 transition-all shadow-sm hover:shadow">
            <i class="fas fa-plus mr-2"></i>Nouveau Motard
        </a>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full whitespace-nowrap text-left text-sm">
            <thead class="bg-gray-50 text-gray-500">
                <tr>
                    <th scope="col" class="px-6 py-4 font-semibold">Nom complet</th>
                    <th scope="col" class="px-6 py-4 font-semibold">Type</th>
                    <th scope="col" class="px-6 py-4 font-semibold">Téléphone</th>
                    <th scope="col" class="px-6 py-4 font-semibold">Motos</th>
                    <th scope="col" class="px-6 py-4 font-semibold">Date d'inscription</th>
                    <th scope="col" class="px-6 py-4 font-semibold text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 bg-white">
                {% for motard in motards %}
                <tr class="hover:bg-gray-50/80 transition-colors group">
                    <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                            <div class="h-10 w-10 rounded-full bg-blue-50 flex items-center justify-center text-blue-600 font-bold text-sm border border-blue-100">
                                {{ motard.nomComplet|first|upper }}
                            </div>
                            <div>
                                <p class="font-medium text-gray-900">{{ motard.nomComplet }}</p>
                                <p class="text-xs text-gray-500">{{ motard.email|default('-') }}</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        {% if motard.type == 'PHYSIQUE' %}
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md text-xs font-medium bg-blue-50 text-blue-700 border border-blue-100">
                            <i class="fas fa-user text-[10px]"></i>
                            Physique
                        </span>
                        {% else %}
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md text-xs font-medium bg-purple-50 text-purple-700 border border-purple-100">
                            <i class="fas fa-building text-[10px]"></i>
                            Morale
                        </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-gray-600">
                        {% if motard.telephone %}
                        <div class="flex items-center gap-2">
                            <i class="fas fa-phone text-gray-400 text-xs"></i>
                            {{ motard.telephone }}
                        </div>
                        {% else %}
                        <span class="text-gray-400">-</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-700">
                            {{ motard.motos|length }} moto(s)
                        </span>
                    </td>
                    <td class="px-6 py-4 text-gray-500 text-xs">
                        {{ motard.createdAt|date('d/m/Y') }}
                    </td>
                    <td class="px-6 py-4 text-right">
                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <a href="{{ path('encoder_motard_show', {id: motard.id}) }}" class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all" title="Voir détails">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('encoder_motard_edit', {id: motard.id}) }}" class="p-2 text-gray-400 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-all" title="Modifier">
                                <i class="fas fa-pen"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-16 text-center">
                        <div class="mx-auto h-24 w-24 rounded-full bg-gray-50 flex items-center justify-center mb-4">
                            <i class="fas fa-users text-4xl text-gray-300"></i>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900">Aucun motard enregistré</h3>
                        <p class="text-gray-500 mt-1 mb-6">Ajoutez des motards pour gérer leurs motos.</p>
                        <a href="{{ path('encoder_motard_new') }}" class="inline-flex items-center justify-center px-5 py-2.5 bg-blue-600 text-white text-sm font-semibold rounded-xl hover:bg-blue-700 transition-colors shadow-sm">
                            <i class="fas fa-plus mr-2"></i>Ajouter un motard
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
