{% extends 'base.html.twig' %}
{% block title %}Motards - MotoTrack{% endblock %}
{% block page_title %}Gestion des Motards{% endblock %}

{% block body %}
<div class="bg-white rounded-2xl shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <h3 class="text-lg font-semibold text-gray-900">
            <i class="fas fa-users text-gray-400 mr-2"></i>Liste des Motards ({{ motards|length }})
        </h3>
        <a href="{{ path('encoder_motard_new') }}" class="inline-flex items-center justify-center px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700 transition-colors">
            <i class="fas fa-plus mr-2"></i>Nouveau Motard
        </a>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nom complet</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Téléphone</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Motos</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for motard in motards %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">
                        <div class="flex items-center">
                            <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center mr-3">
                                <span class="text-primary-600 font-semibold">{{ motard.nomComplet|first|upper }}</span>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900">{{ motard.nomComplet }}</p>
                                <p class="text-xs text-gray-500">{{ motard.email|default('') }}</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {% if motard.type == 'PHYSIQUE' %}bg-blue-100 text-blue-800{% else %}bg-purple-100 text-purple-800{% endif %}">
                            {{ motard.type == 'PHYSIQUE' ? 'Physique' : 'Morale' }}
                        </span>
                    </td>
                    <td class="px-6 py-4 text-gray-600">{{ motard.telephone|default('-') }}</td>
                    <td class="px-6 py-4">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            {{ motard.motos|length }} moto(s)
                        </span>
                    </td>
                    <td class="px-6 py-4 text-gray-500 text-sm">{{ motard.createdAt|date('d/m/Y') }}</td>
                    <td class="px-6 py-4 text-right">
                        <a href="{{ path('encoder_motard_show', {id: motard.id}) }}" class="text-primary-600 hover:text-primary-800 mr-3" title="Voir détails">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('encoder_motard_edit', {id: motard.id}) }}" class="text-amber-600 hover:text-amber-800" title="Modifier">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                        <i class="fas fa-users text-4xl mb-3 text-gray-300"></i>
                        <p>Aucun motard enregistré</p>
                        <a href="{{ path('encoder_motard_new') }}" class="mt-3 inline-flex items-center text-primary-600 hover:text-primary-700">
                            <i class="fas fa-plus mr-1"></i>Ajouter un motard
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
