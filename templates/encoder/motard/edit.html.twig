{% extends 'base.html.twig' %}
{% block title %}Modifier Motard - MotoTrack{% endblock %}
{% block page_title %}Modifier le Motard{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Modifier le Motard</h2>
        <p class="text-gray-500 mt-1">{{ motard.nomComplet }}</p>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
    
    <!-- Section: Informations de base -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-blue-100 flex items-center justify-center">
                    <i class="fas fa-info-circle text-blue-600"></i>
                </div>
                <h3 class="font-semibold text-gray-900">Informations de base</h3>
            </div>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Type de personne</label>
                    {{ form_widget(form.type, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Sélectionnez le type de personne</p>
                    {{ form_errors(form.type) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Nom complet <span class="text-red-500">*</span></label>
                    {{ form_widget(form.nomComplet, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Nom complet du motard</p>
                    {{ form_errors(form.nomComplet) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Section: Contact -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-green-100 flex items-center justify-center">
                    <i class="fas fa-address-book text-green-600"></i>
                </div>
                <h3 class="font-semibold text-gray-900">Contact & Identification</h3>
            </div>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">N° Identification</label>
                    {{ form_widget(form.identification, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Carte d'identité ou passeport</p>
                    {{ form_errors(form.identification) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Téléphone</label>
                    {{ form_widget(form.telephone, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Numéro de téléphone</p>
                    {{ form_errors(form.telephone) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                    <p class="mt-1 text-xs text-gray-500">Adresse email</p>
                    {{ form_errors(form.email) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Section: Adresse -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="h-8 w-8 rounded-lg bg-amber-100 flex items-center justify-center">
                    <i class="fas fa-map-marker-alt text-amber-600"></i>
                </div>
                <h3 class="font-semibold text-gray-900">Adresses</h3>
            </div>
            <button type="button" id="add-adresse" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-blue-600 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors">
                <i class="fas fa-plus mr-2"></i>Ajouter
            </button>
        </div>
        <div class="p-6">
            <div id="adresses-container" data-prototype="{{ form_widget(form.adresses.vars.prototype)|e('html_attr') }}" class="space-y-4">
                {% for adresse in form.adresses %}
                <div class="adresse-item relative bg-gray-50 rounded-lg p-5 border border-gray-200">
                    <button type="button" class="remove-adresse absolute top-3 right-3 h-7 w-7 flex items-center justify-center text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-full transition-colors">
                        <i class="fas fa-times text-sm"></i>
                    </button>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Commune</label>
                            {{ form_widget(adresse.commune, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Quartier</label>
                            {{ form_widget(adresse.quartier, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Avenue</label>
                            {{ form_widget(adresse.avenue, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Numéro</label>
                            {{ form_widget(adresse.numero, {'attr': {'class': 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                        </div>
                    </div>
                    
                    <div class="mt-4 flex items-center gap-2">
                        {{ form_widget(adresse.isActive, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
                        <label class="text-sm text-gray-700">Adresse principale</label>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-between pt-4">
        <a href="{{ path('encoder_motard_index') }}" class="text-gray-600 hover:text-gray-900 font-medium">
            Annuler
        </a>
        <button type="submit" class="inline-flex items-center px-6 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-colors">
            Enregistrer les modifications
        </button>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('adresses-container');
    const addButton = document.getElementById('add-adresse');
    let index = container.querySelectorAll('.adresse-item').length;

    addButton.addEventListener('click', function() {
        const prototype = container.dataset.prototype;
        const newForm = prototype.replace(/__name__/g, index);
        
        const div = document.createElement('div');
        div.className = 'adresse-item relative bg-gray-50 rounded-lg p-5 border border-gray-200';
        div.innerHTML = `
            <button type="button" class="remove-adresse absolute top-3 right-3 h-7 w-7 flex items-center justify-center text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-full transition-colors">
                <i class="fas fa-times text-sm"></i>
            </button>
            ${newForm}
        `;
        
        div.querySelectorAll('input, select').forEach(el => {
            if (el.type !== 'checkbox') {
                el.className = 'w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors';
            } else {
                el.className = 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500';
            }
        });
        
        div.querySelector('.remove-adresse').onclick = function() { div.remove(); };
        
        container.appendChild(div);
        index++;
    });

    document.querySelectorAll('.remove-adresse').forEach(btn => {
        btn.addEventListener('click', function() {
            this.closest('.adresse-item').remove();
        });
    });
});
</script>
{% endblock %}
