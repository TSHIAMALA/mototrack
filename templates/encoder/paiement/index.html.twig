{% extends 'base.html.twig' %}
{% block title %}Paiements - MotoTrack{% endblock %}
{% block page_title %}Gestion des Paiements{% endblock %}

{% block body %}
<div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 bg-gray-50/50">
        <div>
            <h3 class="text-lg font-bold text-gray-900">
                Liste des Paiements
            </h3>
            <p class="text-sm text-gray-500 mt-1">Suivi des paiements enregistrés</p>
        </div>
        <a href="{{ path('encoder_paiement_new') }}" class="inline-flex items-center justify-center px-5 py-2.5 bg-blue-600 text-white text-sm font-semibold rounded-xl hover:bg-blue-700 focus:ring-4 focus:ring-blue-100 transition-all shadow-sm hover:shadow">
            <i class="fas fa-plus mr-2"></i>Nouveau Paiement
        </a>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full whitespace-nowrap text-left text-sm">
            <thead class="bg-gray-50 text-gray-500">
                <tr>
                    <th scope="col" class="px-6 py-4 font-semibold">Date</th>
                    <th scope="col" class="px-6 py-4 font-semibold">Motard</th>
                    <th scope="col" class="px-6 py-4 font-semibold">Montant</th>
                    <th scope="col" class="px-6 py-4 font-semibold">Statut</th>
                    <th scope="col" class="px-6 py-4 font-semibold text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 bg-white">
                {% for paiement in paiements %}
                <tr class="hover:bg-gray-50/80 transition-colors group">
                    <td class="px-6 py-4 text-gray-600">
                        <div class="flex items-center gap-2">
                            <i class="far fa-calendar-alt text-gray-400"></i>
                            {{ paiement.datePaiement|date('d/m/Y') }}
                        </div>
                    </td>
                    <td class="px-6 py-4 font-medium text-gray-900">
                        <div class="flex items-center gap-2">
                            <div class="h-6 w-6 rounded-full bg-gray-100 flex items-center justify-center text-xs text-gray-500">
                                <i class="fas fa-user"></i>
                            </div>
                            {{ paiement.motard|default('-') }}
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <span class="font-mono font-semibold text-gray-900">{{ paiement.montant|number_format(0, ',', ' ') }} FC</span>
                    </td>
                    <td class="px-6 py-4">
                        {% if paiement.statut == 'valide' %}
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md text-xs font-medium bg-emerald-50 text-emerald-700 border border-emerald-100">
                                <i class="fas fa-check-circle text-[10px]"></i>
                                Validé
                            </span>
                        {% else %}
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md text-xs font-medium bg-amber-50 text-amber-700 border border-amber-100">
                                <i class="fas fa-clock text-[10px]"></i>
                                En attente
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-right">
                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <a href="#" class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all" title="Voir les détails">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-16 text-center">
                        <div class="mx-auto h-24 w-24 rounded-full bg-gray-50 flex items-center justify-center mb-4">
                            <i class="fas fa-money-bill-wave text-4xl text-gray-300"></i>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900">Aucun paiement</h3>
                        <p class="text-gray-500 mt-1 mb-6">Enregistrez les paiements des taxes et redevances.</p>
                        <a href="{{ path('encoder_paiement_new') }}" class="inline-flex items-center justify-center px-5 py-2.5 bg-blue-600 text-white text-sm font-semibold rounded-xl hover:bg-blue-700 transition-colors shadow-sm">
                            <i class="fas fa-plus mr-2"></i>Nouveau Paiement
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
