{% extends 'base.html.twig' %}
{% block title %}Paiements - MotoTrack{% endblock %}
{% block page_title %}Gestion des Paiements{% endblock %}

{% block body %}
<div class="bg-white rounded-2xl shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">Liste des Paiements</h3>
        <a href="{{ path('encoder_paiement_new') }}" class="inline-flex items-center px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700 transition-colors">
            <i class="fas fa-plus mr-2"></i>Nouveau Paiement
        </a>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Motard</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Montant</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for paiement in paiements %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-gray-600">{{ paiement.datePaiement|date('d/m/Y') }}</td>
                    <td class="px-6 py-4 font-medium text-gray-900">{{ paiement.motard|default('-') }}</td>
                    <td class="px-6 py-4 text-gray-900 font-semibold">{{ paiement.montant|number_format(0, ',', ' ') }} FC</td>
                    <td class="px-6 py-4">
                        {% if paiement.statut == 'valide' %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Valid√©</span>
                        {% else %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">En attente</span>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr><td colspan="4" class="px-6 py-12 text-center text-gray-500"><i class="fas fa-money-bill-wave text-4xl mb-3"></i><p>Aucun paiement</p></td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
