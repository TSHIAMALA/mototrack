{% extends 'base.html.twig' %}
{% block title %}Nouveau Paiement - MotoTrack{% endblock %}
{% block page_title %}Nouveau Paiement{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8">
        <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-900">Nouveau Paiement</h1>
            <p class="text-gray-500 mt-1">Enregistrez un nouveau paiement de taxe ou redevance.</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
                {{ form_label(form.moto, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.moto, {'attr': {'class': 'w-full px-4 py-3 bg-gray-50 border-gray-200 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-colors'}}) }}
                {{ form_errors(form.moto) }}
            </div>

            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-3">Taxes Ã  payer</label>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    {% for child in form.taxes %}
                    <label class="relative flex items-start p-4 cursor-pointer bg-gray-50 border border-gray-200 rounded-xl hover:bg-white hover:border-yellow-400 transition-all group">
                        <div class="flex items-center h-5">
                            {{ form_widget(child, {'attr': {'class': 'h-4 w-4 text-yellow-500 border-gray-300 rounded focus:ring-yellow-400'}}) }}
                        </div>
                        <div class="ml-3 text-sm">
                            <span class="font-medium text-gray-900 group-hover:text-yellow-700">{{ child.vars.label }}</span>
                        </div>
                    </label>
                    {% endfor %}
                </div>
                {{ form_errors(form.taxes) }}
            </div>

            <div class="md:col-span-2">
                {{ form_label(form.modePaiement, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.modePaiement, {'attr': {'class': 'w-full px-4 py-3 bg-gray-50 border-gray-200 rounded-xl focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-colors'}}) }}
                {{ form_errors(form.modePaiement) }}
            </div>
        </div>
        
        <div class="flex items-center justify-end gap-4 pt-6 border-t border-gray-100">
            <a href="{{ path('encoder_paiement_index') }}" class="px-6 py-3 text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">
                Annuler
            </a>
            <button type="submit" class="px-8 py-3 text-sm font-bold text-white bg-yellow-500 rounded-xl hover:bg-yellow-600 focus:ring-4 focus:ring-yellow-200 transition-all shadow-sm hover:shadow-md">
                Enregistrer le paiement
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
